<Page x:Class="bookclub.MainPage.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bookclub.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid Background="White">
        
        <StackPanel Margin="20">
            <TextBlock Text="Название товара" Margin="0,10,0,0"/>
            <TextBox Name="txtProductName" Width="300"/>

            <TextBlock Text="Цена товара" Margin="0,10,0,0"/>
            <TextBox Name="txtProductPrice" Width="300"/>

            <TextBlock Text="Описание" Margin="0,10,0,0"/>
            <TextBox Name="txtProductDescription" Width="300" Height="100" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Сохранить" Margin="5" Click="BtnSave_Click"/>
                <Button Content="Назад" Margin="5" Click="BtnBack_Click"/>
            </StackPanel> 
        </StackPanel>
    </Grid>
</Page>
